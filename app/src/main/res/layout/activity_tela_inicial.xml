<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Tela_Inicial">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textview_catalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Catálogos -"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
    />
    <Button
        android:id="@+id/button_armas"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Armas"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_catalogo"
        />

    <Button
        android:id="@+id/button_equipamentos"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Equipamentos"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_armas"
        />

    <Button
        android:id="@+id/button_municoes"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Munições"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_equipamentos"
        />

    <Button
        android:id="@+id/button_info"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="info"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>